                <div>
                    @Html.ActionLink("Back to Station", "Details", "Site", new { id = @Model.SiteId }, null)
                </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>
